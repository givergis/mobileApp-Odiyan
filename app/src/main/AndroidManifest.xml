<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="georgy.com.odiyan">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/odiyan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OdiyanMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PuzzleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".WallpaperActivity" />
        <activity android:name=".SetWallpaper" />
        <activity android:name=".LyricsActivity" />
        <activity android:name=".Lyrics1" />
        <activity android:name=".Lyrics2" />
        <activity android:name=".Lyrics3"></activity>
    </application>

</manifest>